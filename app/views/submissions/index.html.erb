<p style="color: green"><%= notice %></p>

<h1>Writing Competition 🏆</h1>

<div id="submissions">
  <% @submissions.each do |submission| %>
    <%= render submission %>
    <p>
      <%= link_to "Show this submission", submission %>
    </p>
  <% end %>
</div>

<% if current_user.submission %>
  <%= link_to  "Edit my Submission", edit_submission_path(current_user.submission) %>
<% else %>
  <%= link_to "New submission", new_submission_path %>
<% end %>
