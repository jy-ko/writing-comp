<p style="color: green"><%= notice %></p>

<%= render @submission %>

<h2>Character count: <%= @submission.essay.length %></h2>
<p><%= @submission.essay %></p>

<div>
  <%= link_to "Edit this submission", edit_submission_path(@submission) %> |
  <%= link_to "Back to submissions", submissions_path %>

  <%= button_to "Destroy this submission", @submission, method: :delete %>
</div>
